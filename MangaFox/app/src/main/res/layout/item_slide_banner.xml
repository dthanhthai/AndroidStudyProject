<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black_70"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85">

            <TextView
                android:id="@+id/anime_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Dragon Ball Super Dragon Ball Super Dragon B"
                android:textAllCaps="true"
                android:textColor="@color/title_anime"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/episode_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/anime_title"
                android:includeFontPadding="false"
                android:padding="3dp"
                android:text="Táº­p 1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="13sp" />


        </RelativeLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15">

            <TextView
                android:id="@+id/anime_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/drop_shadow_all_border"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="9.1"
                android:textAllCaps="true"
                android:textColor="@color/title_anime"
                android:textSize="20sp"
                android:textStyle="normal" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>