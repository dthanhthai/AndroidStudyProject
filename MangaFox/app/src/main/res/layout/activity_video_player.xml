<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35">

        <FrameLayout
            android:id="@+id/main_media_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/exoplayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:fastforward_increment="10000"
                app:resize_mode="fill"
                app:rewind_increment="10000" />

        </FrameLayout>

    </RelativeLayout>

    <!--<android.support.v4.widget.NestedScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="70">-->

    <RelativeLayout
        android:id="@+id/info_wrapper_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:descendantFocusability="afterDescendants"
        android:focusable="true">

        <TextView
            android:id="@+id/anime_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Dragon Ball Super"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/episode_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anime_title_tv"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Táº­p 1: hello world"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:visibility="gone" />

        <View
            android:id="@+id/devide_list_episode"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/episode_name_tv"
            android:background="@color/list_background" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/number_episode_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/devide_list_episode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:focusable="false" />

    </RelativeLayout>
    <!--</android.support.v4.widget.NestedScrollView>-->

</LinearLayout>
